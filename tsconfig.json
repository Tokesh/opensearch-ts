{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "ESNext",
    "pretty": true,
    // "noEmit": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "lib": ["ESNext"]
  },
  // "include": ["src/**/*"],
}
